<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.jlosee.c196practical">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--
           <provider
            android:name=".DBProvider"
            android:authorities="edu.jlosee.c196practical.dbprovider"
            android:exported="false" />
        -->

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="edu.jlosee.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"></meta-data>
        </provider>

        <activity
            android:name=".EditTermActivity"
            android:label="@string/title_activity_create_term"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.jlosee.c196practical.MainActivity" />
        </activity>
        <activity
            android:name=".TermDetailsActivity"
            android:label="@string/title_activity_view_term"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.jlosee.c196practical.MainActivity" />
        </activity>
        <activity
            android:name=".NoteListActivity"
            android:label="@string/title_activity_note"
            android:parentActivityName=".TermDetailsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.jlosee.c196practical.TermDetailsActivity" />
        </activity>
        <activity
            android:name=".AssessmentActivity"
            android:label="@string/title_activity_assessment"
            android:parentActivityName=".TermDetailsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.jlosee.c196practical.TermDetailsActivity" />
        </activity>
        <activity
            android:name=".ViewCourseActivity"
            android:label="@string/title_activity_view_course"
            android:parentActivityName=".TermDetailsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.jlosee.c196practical.TermDetailsActivity" />
        </activity>
        <activity
            android:name=".ViewMentors"
            android:label="@string/title_activity_view_mentors"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".MainActivity"
            />
        <activity
            android:name=".DeleteItemsActivity"
            android:label="@string/title_activity_delete_items"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TermListActivity"
            android:label="@string/title_activity_term_list"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.jlosee.c196practical.MainActivity" />
        </activity>
        <activity
            android:name=".NoteDetails"
            android:label="@string/title_activity_note_details"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>