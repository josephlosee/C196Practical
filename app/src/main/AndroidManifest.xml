<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.jlosee.c196practical">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".WakefulReceiver" />
        <receiver
            android:name=".BootReceiver"
            android:enabled="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="edu.jlosee.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name=".TermDetails"
            android:label="@string/term_details"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.jlosee.c196practical.TermListActivity" />
        </activity>
        <activity
            android:name=".NoteListActivity"
            android:label="@string/title_activity_note"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".AssessmentActivity"
            android:label="@string/title_activity_assessment"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.jlosee.c196practical.NoteListActivity" />
        </activity>
        <activity
            android:name=".CourseDetails"
            android:label="@string/title_activity_view_course"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.jlosee.c196practical.TermDetails" />
        </activity>
        <activity
            android:name=".MentorList"
            android:label="@string/title_activity_view_mentors"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TermListActivity"
            android:label="@string/title_activity_term_list"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.jlosee.c196practical.MainActivity" />
        </activity>
        <activity
            android:name=".NoteDetails"
            android:label="@string/title_activity_note_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".NoteImageView" />

        <activity android:name=".CourseList"/>
        <activity
            android:name=".MentorDetails"
            android:label="@string/title_activity_mentor_details"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.jlosee.c196practical.MentorList" />
        </activity>
    </application>

</manifest>